@theme "kripton"

window {
    location: south;
    anchor: south;
    width: 421px;
}

inputbar, element-icon {
    enabled: false;
}

listview {
    layout: horizontal;
    background-color: #e78284;
}

element {
    padding: 4px 10px 4px 10px;
}
element-text {
    highlight: none;
    text-color: #000000;
}
element selected.normal {
    background-color: #000000;
}
element-text selected {
    text-color: #e78284;
}
