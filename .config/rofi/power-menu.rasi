@theme "kripton"

window {
    location: south;
    anchor: south;
    width: 100%;
}

entry, inputbar, element-icon {
    enabled: false;
}

listview {
    layout: horizontal;
}

element {
    padding: 4px 10px 4px 10px;
}
element-text selected {
    text-color: #e0aea4;
    background-color: transparent;
}
