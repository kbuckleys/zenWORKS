@theme "kripton"

configuration {
    kb-remove-to-sol: "";
    kb-remove-char-back: "BackSpace";
}

* {
    selected: rgba(223, 223, 221, 0.1);
    selected-normal-background: var(selected);
    font: "0xProto Nerd Font Medium 10";
}

window {
    location: south;
    anchor: south;
    fullscreen: false;
    width: 25%;
    enabled: true;
    dynamic: true;
    margin: 0px;
    padding: 0px;
    border: 0px;
    cursor: "default";
}

mainbox {
    enabled: true;
    spacing: 0px;
    margin: 0px;
    padding: 0px;
    border: 1px solid;
    border-radius: 0px;
    children: [inputbar, listview];
}

inputbar {
    enabled: true;
    spacing: 4px;
    margin:  0px;
    padding: 4px 8px;
    border: 0px;
    children: [ "textbox-prompt-colon", "entry" ];
}
textbox-prompt-colon {
    enabled: true;
    expand: false;
    str: "CALC >";
    text-color: #9BB1BF;
}
entry {
    enabled: true;
    width: 100%;
}

listview {
    enabled: true;
    columns: 1;
    lines: 8;
    cycle: true;
    scrollbar: false;
    layout: vertical;
    reverse: false;
    fixed-height: false;
    fixed-columns: false;
    spacing: 2px;
    margin: 0px;
    padding: 0px 0px 0px 0px;
    border: 0px;
    cursor: "default";
}

element {
    enabled: true;
    spacing: 0px;
    margin: 0px;
    padding: 2px 8px 2px 8px;
    border: 0px;
    cursor: "default";
}
element-text {
    highlight: none;
}
element-text selected {
    background-color: transparent;
}
