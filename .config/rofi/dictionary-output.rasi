@theme "kripton"

* {
    selected: transparent;
    selected-normal-background: var(selected);
    font: "0xProto Nerd Font Medium 10";
}

window {
    location: south;
    anchor: south;
    fullscreen: false;
    width: 44%;
    border: 0px;
}

mainbox {
    border: 1px solid;
    children: [listview];
}

listview {
    scrollbar: false;
    fixed-height: false;
    fixed-columns: false;
    padding: 12px 0px 12px 0px;
    layout: vertical;
}

element-text {
    text-color: #e0d8a4;
    horizontal-align: 0.5;
}
