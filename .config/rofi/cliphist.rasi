@theme "kripton"

* {
    selected: rgba(223, 223, 221, 0.1);
    selected-normal-background: var(selected);
    font: "0xProto Nerd Font Medium 10";
}

window {
    location: south;
    anchor: south;
    width: 100%;
    border: 0px;
}

mainbox {
    border: 1px solid;
    children: [ "inputbar", "listview" ];
}

inputbar {
    enabled: false;
}

listview {
    columns: 3;
    lines: 12;
    cycle: true;
    scrollbar: false;
    layout: vertical;
    reverse: false;
    fixed-height: false;
    fixed-columns: false;
    spacing: 2px;
}

element {
    padding: 2px 8px 2px 8px;
}
element-text {
    highlight: bold #b6e0a4;
}
element-text selected {
    background-color: transparent;
}
